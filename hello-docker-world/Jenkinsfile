pipeline {
    agent any
    stages {
        stage("deploy and check") {
            steps {
                script {
 		                sh 'sudo chmod 600 ssh_keys/*'
                    sh 'git-crypt unlock /var/lib/jenkins/gpgkey'
                    sh 'ansible-playbook -i $inventory --extra-vars "tagversion=$tagversion" -u vagrant -b $playbook'
                }
            }
        }
    }
}
